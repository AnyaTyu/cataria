{
    "esversion": 6,
    "esnext": true,
    "boss": true,
    "eqeqeq": true,
    "evil": true,
    "expr": true,
    "forin": true,
    "immed": true,
    "loopfunc": true,
    "maxdepth": 4,
    "maxlen": 120,
    "noarg": true,
    "noempty": true,
    "quotmark": "single",
    "sub": true,
    "supernew": true,
    "undef": true,
    "unused": true,
    "node": true,

    "predef": [
        "define",
        "oninit",
        "apply",
        "applyCtx",
        "applyNext",
        "attrs",
        "BEM",
        "bem",
        "block",
        "cls",
        "content",
        "def",
        "elem",
        "extend",
        "js",
        "local",
        "match",
        "mix",
        "mod",
        "mode",
        "once",
        "replace",
        "tag",
        "wrap",
        "window",
        "modules",
        "describe",
        "it",
        "before"
    ]
}
